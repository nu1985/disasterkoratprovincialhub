generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Incident {
  id                    String    @id @default(uuid())
  externalReferenceCode String?   @map("external_reference_code")
  title                 String    @db.Text
  description           String?   @db.Text
  incidentTypeId        String    @map("incident_type_id")
  severity              Severity  @default(LOW)
  status                IncidentStatus @default(NEW)
  reportedAt            DateTime  @default(now()) @map("reported_at")
  occurredAt            DateTime? @map("occurred_at")
  locationId            String?   @map("location_id")
  latitude              Float?
  longitude             Float?
  reporterId            String?   @map("reporter_id")
  sourceChannelId       String?   @map("source_channel_id")
  createdByUserId       String?   @map("created_by_user_id")
  syncKey               String?   @unique @map("sync_key")
  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @updatedAt @map("updated_at")

  incidentType          IncidentType @relation(fields: [incidentTypeId], references: [id])
  location              Location?    @relation(fields: [locationId], references: [id])
  reporter              Reporter?    @relation(fields: [reporterId], references: [id])
  sourceChannel         Channel?     @relation(fields: [sourceChannelId], references: [id])
  createdByUser         User?        @relation(fields: [createdByUserId], references: [id])
  
  statusHistory         IncidentStatusHistory[]
  assignments           Assignment[]
  attachments           Attachment[]
  syncEvents            SyncEvent[]

  @@map("incidents")
  @@index([incidentTypeId])
  @@index([locationId])
  @@index([reporterId])
  @@index([sourceChannelId])
  @@index([createdByUserId])
}

model IncidentType {
  id          String   @id @default(uuid())
  code        String   @unique
  nameTh      String   @map("name_th")
  nameEn      String?  @map("name_en")
  description String?  @db.Text
  incidents   Incident[]

  @@map("incident_types")
}

model Location {
  id          String   @id @default(uuid())
  province    String
  district    String
  subdistrict String
  addressText String?  @map("address_text") @db.Text
  postalCode  String?  @map("postal_code")
  geocode     String?
  latitude    Float?
  longitude   Float?
  incidents   Incident[]
  resources   Resource[]

  @@map("locations")
}

model Reporter {
  id               String   @id @default(uuid())
  name             String?
  phone            String?
  lineId           String?  @map("line_id")
  facebookId       String?  @map("facebook_id")
  preferredChannel String?  @map("preferred_channel")
  isAnonymous      Boolean  @default(false) @map("is_anonymous")
  createdAt        DateTime @default(now()) @map("created_at")
  incidents        Incident[]

  @@map("reporters")
}

model Organization {
  id            String   @id @default(uuid())
  name          String
  type          String
  parentOrgId   String?  @map("parent_org_id")
  contactPhone  String?  @map("contact_phone")
  contactAddress String? @map("contact_address") @db.Text
  
  parentOrg     Organization?  @relation("OrgHierarchy", fields: [parentOrgId], references: [id])
  childOrgs     Organization[] @relation("OrgHierarchy")
  units         Unit[]
  users         User[]
  resources     Resource[]

  @@map("organizations")
  @@index([parentOrgId])
}

model Unit {
  id             String   @id @default(uuid())
  organizationId String   @map("organization_id")
  name           String
  unitType       String?  @map("unit_type")
  contactChannel String?  @map("contact_channel")
  isActive       Boolean  @default(true) @map("is_active")
  
  organization   Organization @relation(fields: [organizationId], references: [id])
  assignments    Assignment[]

  @@map("units")
  @@index([organizationId])
}

model User {
  id             String   @id @default(uuid())
  name           String
  email          String?  @unique
  username       String?  @unique
  phone          String?
  passwordHash   String?  @map("password_hash")
  roleId         String   @map("role_id")
  organizationId String?  @map("organization_id")
  isActive       Boolean  @default(true) @map("is_active")
  createdAt      DateTime @default(now()) @map("created_at")
  lastLoginAt    DateTime? @map("last_login_at")

  role           Role          @relation(fields: [roleId], references: [id])
  organization   Organization? @relation(fields: [organizationId], references: [id])
  
  createdIncidents Incident[]
  statusChanges    IncidentStatusHistory[]
  assignedAssignments Assignment[]
  uploadedAttachments Attachment[]

  @@map("users")
  @@index([roleId])
  @@index([organizationId])
}

model Role {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?  @db.Text
  users       User[]

  @@map("roles")
}

model IncidentStatusHistory {
  id              String   @id @default(uuid())
  incidentId      String   @map("incident_id")
  oldStatus       IncidentStatus? @map("old_status")
  newStatus       IncidentStatus  @map("new_status")
  changedAt       DateTime @default(now()) @map("changed_at")
  changedByUserId String?  @map("changed_by_user_id")
  note            String?  @db.Text

  incident        Incident @relation(fields: [incidentId], references: [id])
  changedByUser   User?    @relation(fields: [changedByUserId], references: [id])

  @@map("incident_status_history")
  @@index([incidentId])
  @@index([changedByUserId])
}

model Assignment {
  id               String   @id @default(uuid())
  incidentId       String   @map("incident_id")
  unitId           String   @map("unit_id")
  assignedByUserId String?  @map("assigned_by_user_id")
  assignedAt       DateTime @default(now()) @map("assigned_at")
  acceptedAt       DateTime? @map("accepted_at")
  completedAt      DateTime? @map("completed_at")
  status           AssignmentStatus @default(ASSIGNED)
  note             String?  @db.Text

  incident         Incident @relation(fields: [incidentId], references: [id])
  unit             Unit     @relation(fields: [unitId], references: [id])
  assignedByUser   User?    @relation(fields: [assignedByUserId], references: [id])
  
  resources        AssignmentResource[]
  attachments      Attachment[]

  @@map("assignments")
  @@index([incidentId])
  @@index([unitId])
  @@index([assignedByUserId])
}

model Resource {
  id             String   @id @default(uuid())
  organizationId String   @map("organization_id")
  name           String
  resourceType   String   @map("resource_type")
  capacity       Float?
  status         ResourceStatus @default(AVAILABLE)
  locationId     String?  @map("location_id")

  organization   Organization @relation(fields: [organizationId], references: [id])
  location       Location?    @relation(fields: [locationId], references: [id])
  assignments    AssignmentResource[]

  @@map("resources")
  @@index([organizationId])
  @@index([locationId])
}

model AssignmentResource {
  id           String   @id @default(uuid())
  assignmentId String   @map("assignment_id")
  resourceId   String   @map("resource_id")
  quantity     Float

  assignment   Assignment @relation(fields: [assignmentId], references: [id])
  resource     Resource   @relation(fields: [resourceId], references: [id])

  @@map("assignment_resources")
  @@index([assignmentId])
  @@index([resourceId])
}

model Attachment {
  id              String   @id @default(uuid())
  incidentId      String   @map("incident_id")
  assignmentId    String?  @map("assignment_id")
  fileUrl         String   @map("file_url") @db.Text
  fileType        String   @map("file_type")
  uploadedByUserId String? @map("uploaded_by_user_id")
  createdAt       DateTime @default(now()) @map("created_at")

  incident        Incident @relation(fields: [incidentId], references: [id])
  assignment      Assignment? @relation(fields: [assignmentId], references: [id])
  uploadedByUser  User?    @relation(fields: [uploadedByUserId], references: [id])

  @@map("attachments")
  @@index([incidentId])
  @@index([assignmentId])
  @@index([uploadedByUserId])
}

model Channel {
  id         String   @id @default(uuid())
  name       String
  type       String
  configJson Json?    @map("config_json")
  incidents  Incident[]

  @@map("channels")
}

model SyncEndpoint {
  id         String   @id @default(uuid())
  name       String
  direction  SyncDirection
  url        String   @db.Text
  authType   String?  @map("auth_type")
  configJson Json?    @map("config_json")
  lastSyncAt DateTime? @map("last_sync_at")
  syncEvents SyncEvent[]

  @@map("sync_endpoints")
}

model SyncEvent {
  id             String   @id @default(uuid())
  syncEndpointId String   @map("sync_endpoint_id")
  incidentId     String   @map("incident_id")
  eventType      String   @map("event_type")
  payloadJson    Json?    @map("payload_json")
  status         SyncStatus @default(PENDING)
  lastError      String?  @map("last_error") @db.Text
  createdAt      DateTime @default(now()) @map("created_at")

  syncEndpoint   SyncEndpoint @relation(fields: [syncEndpointId], references: [id])
  incident       Incident     @relation(fields: [incidentId], references: [id])

  @@map("sync_events")
  @@index([syncEndpointId])
  @@index([incidentId])
}

enum Severity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum IncidentStatus {
  NEW
  VALIDATING
  ASSIGNED
  IN_PROGRESS
  DONE
  INVALID
  DUPLICATE
}

enum AssignmentStatus {
  ASSIGNED
  ACCEPTED
  REJECTED
  IN_PROGRESS
  COMPLETED
}

enum ResourceStatus {
  AVAILABLE
  IN_USE
  MAINTENANCE
}

enum SyncDirection {
  INBOUND
  OUTBOUND
}

enum SyncStatus {
  PENDING
  SUCCESS
  FAILED
}
